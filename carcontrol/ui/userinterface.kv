#:import utils kivy.utils
#:import icon kivy.garden.iconfonts.icon

<BaseView>:
    orientation: 'vertical'
    ScreenManager:
        id: screenmanager
        size_hint: 1, 0.8
        pos_hint: {'center_x': 0.5, 'top': 0.92}
        HomeScreen
        MediaScreen
        PhoneScreen
    StatusBar:
        size_hint: 1, 0.08
        pos_hint: {'center_x': 0.5, 'top': 1}
    ControlBar:
        id: control_bar
        size_hint: 1, 0.12
        pos_hint: {'center_x': 0.5, 'top': 0.12}

<StatusBar>:
    id: status_bar
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('222222FF')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: 'status_left'
        orientation: 'horizontal'
        size: .3, 1
        LabelButton:
            id: volume_icon
            markup: True
            text: "%s"%(icon('fa-volume-off'))
            font_size: 25
            on_release: status_bar.volume_clicked()
        LabelButton:
            id: brightness_icon
            markup: True
            text: "%s"%(icon('fa-lightbulb-on'))
            font_size: 25
            on_release: status_bar.brightness_clicked()
    BoxLayout:
        id: 'status_center'
        orientation: 'horizontal'
        size: .3, 1
        Label:
            id: time
            bold: True
            font_size: 25
        Label:
            id: temp
            text: '12.3Â°C'
            font_size: 25
    BoxLayout:
        id: 'status_right'
        orientation: 'horizontal'
        size: .3, 1
        BoxLayout:
            Label:
                id: bluetooth_icon
                markup: True
                text: "%s"%(icon('fa-mobile-alt'))
                font_size: 25
                color: utils.get_color_from_hex('444444FF')
            Label:
                id: carrier
                text: ''
                font_size: 25
            Label:
                id: cell_icon
                markup: True
                text: "%s"%(icon('fa-signal-slash'))
                font_size: 25
                color: utils.get_color_from_hex('444444FF')
            Label:
                id: batt_icon
                markup: True
                text: "%s"%(icon('fa-battery-slash'))
                font_size: 25
                color: utils.get_color_from_hex('444444FF')

<ControlBar>:
    id: control_bar
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('373737FF')
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
        Color:
            rgba: utils.get_color_from_hex('464646FF')
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos[0], self.pos[1]+self.height
            size: self.width, self.height/80
    BoxLayout:
        orientation: "horizontal"
        size: self.parent.width, self.parent.height
        LabelButton:
            id: home_screen_btn
            markup: True
            text: "%s"%(icon('fa-home'))
            font_size: 25
            on_release: control_bar.switch_screen(self)
        LabelButton:
            id: media_screen_btn
            markup: True
            text: "%s"%(icon('fa-music'))
            font_size: 25
            color: utils.get_color_from_hex('444444FF')
            on_release: control_bar.switch_screen(self)
        LabelButton:
            id: radio_screen_btn
            markup: True
            text: "%s"%(icon('fa-broadcast-tower'))
            font_size: 25
            color: utils.get_color_from_hex('444444FF')
#            on_release: control_bar.switch_screen(self)
        LabelButton:
            id: phone_screen_btn
            markup: True
            text: "%s"%(icon('fa-phone'))
            font_size: 25
            color: utils.get_color_from_hex('444444FF')
            on_release: control_bar.switch_screen(self)
        LabelButton:
            id: settingsScreen_btn
            markup: True
            text: "%s"%(icon('fa-cog'))
            font_size: 25
            color: utils.get_color_from_hex('444444FF')
#            on_release: status_bar.volume_clicked()

<HomeScreen>:
    name: 'home_screen'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            padding: 50
            Label:
                id: date_lbl
                text: ''
                font_size: 30
            Label:
                id: time_lbl
                text: ''
                font_size: 30

<VolumePopup>:
    id: volume_popup
    RelativeLayout:
        pos: self.parent.pos
        size: self.parent.size[0]*0.8, self.parent.size[1]
        LabelButton:
            id: mute_btn
            markup: True
            text: "%s"%(icon('fa-volume'))
            font_size: 25
            height: self.parent.height*0.6
            pos: (35 - self.parent.width*0.5), 0
        Slider:
            id: volume_slider
            pos: 30, 0
            size: 20, 20
            value_track_color: utils.get_color_from_hex('A6CDE4FF')
            value_track: True
            padding: 50
            value: volume_popup.current
            min: volume_popup.min
            max: volume_popup.max
            step: 1

<BrightnessPopup>:
    id: brightness_popup
    RelativeLayout:
        pos: self.parent.pos
        size: self.parent.size[0]*0.8, self.parent.size[1]
        LabelButton:
            id: mute_btn
            markup: True
            text: "%s"%(icon('fa-lightbulb'))
            font_size: 25
            height: self.parent.height*0.6
            pos: (35 - self.parent.width*0.5), 0
        Slider:
            id: brightness_slider
            pos: 30, 0
            size: 20, 20
            value_track_color: utils.get_color_from_hex('A6CDE4FF')
            value_track: True
            padding: 50
            value: brightness_popup.current
            min: brightness_popup.min
            max: brightness_popup.max
            step: 1

<PopupBar>
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size_hint: .8, 0.12
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('333333FF')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]

<MediaScreen>:
    name: 'media_screen'
    id: media_screen
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: title
            text: ''
            font_size: 30
        Label:
            id: artist
            text: ''
            font_size: 30
        ProgressBar:
            id: progress
            width: root.width - 180
        Label:
            id: elapsed
            test: ''
            font_size: 15
        BoxLayout:
            orientation: 'horizontal'
            LabelButton:
                id: previous_btn
                markup: True
                text: "%s"%(icon('fa-backward'))
                font_size: 25
                on_release: media_screen.on_previous()
            LabelButton:
                id: play_btn
                markup: True
                text: "%s"%(icon('fa-play'))
                font_size: 25
                on_release: media_screen.on_play()
            LabelButton:
                id: next_btn
                markup: True
                text: "%s"%(icon('fa-forward'))
                font_size: 25
                on_release: media_screen.on_next()

<PhoneScreen>:
    name: 'phone_screen'
    id: phone_screen
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: phone_status
            text: 'Aucun appel en cours'
        TextInput:
            id: phone_number
            size_hint: 0.6, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 0.6, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Button:
                id: digit_7
                text: '7'
            Button:
                id: digit_8
                text: '8'
            Button:
                id: digit_9
                text: '9'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 0.6, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Button:
                id: digit_4
                text: '4'
            Button:
                id: digit_5
                text: '5'
            Button:
                id: digit_6
                text: '6'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 0.6, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Button:
                id: digit_1
                text: '1'
            Button:
                id: digit_2
                text: '2'
            Button:
                id: digit_3
                text: '3'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 0.6, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Button:
                id: digit_star
                text: '*'
            Button:
                id: digit_0
                text: '0'
            Button:
                id: digit_hash
                text: '#'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 0.6, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            LabelButton:
                id: dial_btn
                markup: True
                text: "%s"%(icon('fa-phone'))
                font_size: 25
#                color: utils.get_color_from_hex('D44444FF')
                color: utils.get_color_from_hex('44D446FF')
            LabelButton:
                id: dial_btn
                markup: True
                text: "%s"%(icon('fa-backspace'))
                font_size: 25